            "Controller\\"  : "app/controller",
            "Core\\"        : "app/core",
            "Helper\\"      : "app/helper",
            "Interfaces\\"   : "app/interfaces",
            "Model\\"       : "app/model",
            "Migration\\"   : "app/migrations"
        }
    },
    "require": {
        "symfony/http-foundation"   : "^4.2",
        "symfony/routing"           : "^4.2",
        "symfony/http-kernel"       : "^4.2",
        "doctrine/dbal"             : "^2.9",
        "hashids/hashids"           : "^4.0",
        "illuminate/database"       : "^5.8",
        "illuminate/events"         : "^5.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4"
    }
}
